<section>
  <div class="row">
    <h1>Nova Receita</h1>
      <div class="form-group">
          <%= simple_form_for @recipe do |f| %>
            <div class="col-md-6">
              <%= f.input :name, label: 'Nome' %>
              <%= f.input :kitchen_type_id, collection: @kitchen_types, prompt: 'Selecione', label_method: :name, value_method: :id, label: 'Cozinha' %>
              <%= f.input :food_type_id, collection: @food_types, prompt: 'Selecione', label_method: :name, value_method: :id, label: 'Tipo de Comida' %>
              <%= f.input :amount_people, label: 'Pessoas' %>
              <%= f.input :preparation_time, label: 'Tempo de Preparo' %>
              <%= f.input :preparation_level, label: 'NÃ­vel de Dificuldade' %>
              <%= f.input :ingredients, label: 'Ingredientes' %>
              <%= f.input :steps, label: 'Passo a passo' %>
              <%= f.submit 'Cadastrar Receita' %>
            </div>
            <div class="col-md-6">
              Enviar Foto
              <%= f.file_field :photo %>
            </div>
          <% end %>
      </div>
      <span><%= notice %></span>
    </div>
  </div>
</section>
